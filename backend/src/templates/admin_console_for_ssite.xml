		<UserPref name="appid" display_name="__MSG_APPLICATION_ID__" datatype="string" default_value="" />
		<UserPref name="thd" display_name="__MSG_TITLE_HIDDEN__" datatype="bool" default_value="true" />
    <Root>
			<BasicInfo>
				<Title><![CDATA[__MSG_GADGET_TITLE_SSITE_ADMIN_CONSOLE__]]></Title>
